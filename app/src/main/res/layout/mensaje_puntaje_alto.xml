<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    " />

    <ImageView
        android:id="@+id/estrella1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/star"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/lblPUNTAJE"
        android:layout_toStartOf="@+id/lblPUNTAJE" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/star"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lblPUNTAJE"
        android:layout_toEndOf="@+id/lblPUNTAJE"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/lblPUNTAJE"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:text="Buen Trabajo"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"


        android:layout_alignBottom="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txtNick"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Ingresa tu nombre"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="16sp" />

</RelativeLayout>