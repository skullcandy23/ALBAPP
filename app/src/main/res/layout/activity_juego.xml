<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_juego"
    tools:context="nougat.team.team_nougat_app.Juego">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/vida1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            app:srcCompat="@drawable/vida" />

        <ImageView
            android:id="@+id/vida2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            app:srcCompat="@drawable/vida" />

        <ImageView
            android:id="@+id/vida3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            app:srcCompat="@drawable/vida" />

    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/iv_Senia"
        android:layout_width="355dp"
        android:layout_height="242dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:visibility="visible"
        app:srcCompat="@android:color/background_light"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btn_opcion_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_opciones"
            android:text="OP 1"
            android:textSize="18dip" />

        <Button
            android:id="@+id/btn_opcion_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_opciones"
            android:text="OP 2"
            android:textSize="18dip" />

        <Button
            android:id="@+id/btn_opcion_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_opciones"
            android:text="OP 3"
            android:textSize="18dip" />

        <Button
            android:id="@+id/btn_opcion_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_opciones"
            android:text="OP 4"
            android:textSize="18dip" />

    </LinearLayout>

    <TextView
        android:id="@+id/lblPuntaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text="TextView"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold|normal"
        tools:text="Puntaje: 0" />

</RelativeLayout>
